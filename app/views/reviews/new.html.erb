<div class='container col-6 offset-3'>

<h1 class='mt-5 text-center'>What do you think about <%= @restaurant.name %>?</h1>

<div>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: 0..5 %>
  <div class="d-flex justify-content-center">
  <%= f.button :submit, class:"btn-primary mt-3"  %>
  </div>
<% end %>
</div>

</div>
